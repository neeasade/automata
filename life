#!/usr/bin/env bash

Y=40  # grid width
X=20  # grid height
I=200 # attempts at creating live cells

check() {
    c=

    for ((x = i - 1; x <= i + 1; x++)) {
      ((gol[$x $((j - 1))] && c++,
        gol[$x $((j + 1))] && c++))
    }

  ((gol[$((i - 1)) $j] && c++,
    gol[$((i + 1)) $j] && c++))
}

update() {
    p=

    for ((i = 0; i < X; i++)) {
        for ((j = 0; j < Y; j++)) {
            ((gol[$i $j])) && p+=. || p+=' '

            check

            case $c in
                2) ;; # do nothing
                3) cpy[$i $j]=1;;
                *) cpy[$i $j]=0
            esac
        }

        p+='\n'
    }

    printf '\e[H%b' "$p"

    for i in "${!cpy[@]}"; {
        gol[$i]=${cpy[$i]}
    }
}

declare -A gol cpy

for ((; i < I; i++)) {
  ((x = RANDOM % X,
    y = RANDOM % Y,

    gol[$x $y] = 1))
}

printf '\e[2J'

for ((;;)) { update; }
