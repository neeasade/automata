#!/usr/bin/env bash
#
# brain - brian's brain implementation

cd "${0%.*}"; . ../main

COLORS=(
    '016 032 041'
    '113 170 197'
    '237 238 240'
)

usage="usage : ${0##*/} [height] [width] [init] [iter]"

helper X "$1"
helper Y "$2"
helper I "$3"
helper N "$4"

declare -A uni

((t = 0))

for ((i = 0; i < I; ++i)) {
    ((
        x = RANDOM % X,
        y = RANDOM % Y
    ))

    ((uni[$x $y $t] = RANDOM % 2 + 1))
}

for ((n = 0; n < N; ++n)) {
    out="P3\n$Y $X\n255\n"

    for ((i = 0; i < X; ++i)) {
        for ((j = 0; j < Y; ++j)) {
            out+="${COLORS[uni[$i $j $t]]}\n"

            case $((uni[$i $j $t])) in
                0)
                    ((cnt = 0))

                    for u in -1 0 1; {
                        for v in -1 0 1; {
                            ((u != 0 || v != 0)) && {
                                ((
                                    x = (i + u + X) % X,
                                    y = (j + v + Y) % Y
                                ))

                                ((uni[$x $y $t] == 2 && ++cnt))
                            }
                        }
                    }

                    ((tmp = cnt == 2 ? 2 : 0))
                    ;;
                1) ((tmp = 0));;
                2) ((tmp = 1));;
            esac

            ((uni[$i $j $((!t))] = tmp))
        }
    }

    printf '%b\n' "$out"

    ((t ^= 1))
}
