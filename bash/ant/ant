#!/usr/bin/env bash
#
# ant - langton's ant implementation

cd "${0%.*}"; . ../main

usage="usage : ${0##*/} [height] [width] [iter]"

helper X "$1"
helper Y "$2"
helper N "$3"

((
    ANT_X = X / 2,
    ANT_Y = Y / 2,
    DIR = 0
))

declare -A uni

for ((n = 0; n < N; ++n)) {
    out="P1\n$Y $X\n"

    for ((i = 0; i < X; ++i)) {
        for ((j = 0; j < Y; ++j)) {
            out+=$((uni[$i $j]))
        }
    }

    ((DIR = (DIR + ((uni[$ANT_X $ANT_Y] ^=1 ) == 0 ? 1 : -1) + 4) % 4))

    case $DIR in
        0) ((ANT_X = (--ANT_X + X) % X));;
        1) ((ANT_Y = (++ANT_Y + Y) % Y));;
        2) ((ANT_X = (++ANT_X + X) % X));;
        3) ((ANT_Y = (--ANT_Y + Y) % Y))
    esac

    printf '%b\n' "$out"
}
