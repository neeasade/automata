#!/usr/bin/env bash
#
# ant - langton's ant implementation

helper() {
    declare -n var="$1"

    ((var = $2)) &> /dev/null && ((var > 0)) || {
        echo "usage : ${0##*/} [height] [width] [iter]\n" >&2
        exit 1
    }
}

helper X "$1"
helper Y "$2"
helper N "$3"

((
    ANT_X = X / 2,
    ANT_Y = Y / 2,
    DIR = 0
))

declare -A uni

for ((n = 0; n < N; ++n)) {
    out="P1\n$Y $X\n"

    for ((i = 0; i < X; ++i)) {
        for ((j = 0; j < Y; ++j)) {
            out+=$((uni[$i $j]))
        }
    }

    ((uni[$ANT_X $ANT_Y] ^= 1))

    if ((uni[$ANT_X $ANT_Y] == 0)); then
        ((DIR = (++DIR + 4) % 4))
    else
        ((DIR = (--DIR + 4) % 4))
    fi

    case $DIR in
        0) ((ANT_X = (--ANT_X + X) % X));;
        1) ((ANT_Y = (++ANT_Y + Y) % Y));;
        2) ((ANT_X = (++ANT_X + X) % X));;
        3) ((ANT_Y = (--ANT_Y + Y) % Y))
    esac

    printf '%b\n' "$out"
}
